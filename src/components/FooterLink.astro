---
import { Icon } from '@astrojs/starlight/components';

const { icon, name, url } = Astro.props;
---

<a class="footer-link" href={url}>
	<Icon name={icon} size="1.5rem" />
	{name}
</a>

<style is:global>
	.sl-markdown-content .footer-link,
	.footer-link {
		display: flex;
		align-items: center;
		border-radius: 0.375rem;
		text-decoration-color: var(--sl-color-secondary);
		text-decoration: underline;
		padding: 0.375rem;
		color: var(--sl-color-text);
	}

	.sl-markdown-content .footer-link:hover,
	.footer-link:hover {
		color: var(--sl-color-secondary);
		text-decoration-color: var(--sl-color-secondary);
	}

	.footer-link > svg {
		margin-right: 0.5rem;
	}
</style>
